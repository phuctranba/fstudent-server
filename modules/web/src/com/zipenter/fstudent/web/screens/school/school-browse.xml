<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="schoolsTable"
        messagesPack="com.zipenter.fstudent.web.screens.school">
    <data readOnly="true">
        <collection id="schoolsDc"
                    class="com.zipenter.fstudent.entity.School"
                    view="school-view">
            <loader id="schoolsDl">
                <query>
                    <![CDATA[select e from fstudent_School e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="schoolsTable"
            spacing="true">
        <filter id="filter"
                applyTo="schoolsTable"
                dataLoader="schoolsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="schoolsTable"
                    width="100%"
                    dataContainer="schoolsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="provincial"/>
                <column id="type"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="schoolsTable.create"/>
                <button id="editBtn" action="schoolsTable.edit"/>
                <button id="removeBtn" action="schoolsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
