<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="userProfilesTable"
        messagesPack="com.zipenter.fstudent.web.screens.userprofile">
    <data readOnly="true">
        <collection id="userProfilesDc"
                    class="com.zipenter.fstudent.entity.UserProfile"
                    view="userProfile-view">
            <loader id="userProfilesDl">
                <query>
                    <![CDATA[select e from fstudent_UserProfile e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="userProfilesTable"
            spacing="true">
        <filter id="filter"
                applyTo="userProfilesTable"
                dataLoader="userProfilesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="userProfilesTable"
                    width="100%"
                    dataContainer="userProfilesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="fullName"/>
                <column id="dob"/>
                <column id="gender"/>
                <column id="email"/>
                <column id="phoneNumber"/>
                <column id="major"/>
                <column id="school"/>
                <column id="district"/>
                <column id="numOfBook"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="userProfilesTable.create"/>
                <button id="editBtn" action="userProfilesTable.edit"/>
                <button id="removeBtn" action="userProfilesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
