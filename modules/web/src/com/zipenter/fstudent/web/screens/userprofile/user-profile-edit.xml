<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.zipenter.fstudent.web.screens.userprofile">
    <data>
        <instance id="userProfileDc"
                  class="com.zipenter.fstudent.entity.UserProfile"
                  view="userProfile-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="userProfileDc">
                <column width="250px">
                    <textField id="fullNameField" property="fullName"/>
                    <pickerField id="userField" property="user">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="schoolField" property="school">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="majorField" property="major">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="districtField" property="district">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="dobField" property="dob"/>
                    <textField id="emailField" property="email"/>
                    <textField id="phoneNumberField" property="phoneNumber"/>
                    <lookupField id="genderField" property="gender"/>
                    <textField id="numOfBookField" property="numOfBook"/>
                    <textField id="firstNameField" property="firstName"/>
                    <textArea id="avatarField" property="avatarId" rows="5"/>
                    <textField id="middleNameField" property="middleName"/>
                    <textField id="lastNameField" property="lastName"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
